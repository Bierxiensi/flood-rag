    "import pandas as pd\n",
    "import numpy as np\n",
    "import json\n",
    "from sklearn.preprocessing import StandardScaler\n",
    "from tqdm import tqdm\n",
    "import os\n",
    "\n",
    "# ==== 参数设置 ====\n",
    "CSV_PATH = \"data/camels_01022500.csv\"  # 你的原始时序数据\n",
    "OUT_TRAIN = \"data/train.jsonl\"\n",
    "OUT_VAL = \"data/val.jsonl\"\n",
    "INPUT_LEN = 12   # 过去多少步作为输入（例如12天）\n",
    "PRED_LEN = 3     # 预测未来多少步（例如3天）\n",
    "\n",
    "# ==== 1. 读取数据 ====\n",
    "df = pd.read_csv(CSV_PATH)\n",
    "df = df.sort_values(\"date\").reset_index(drop=True)\n",
    "\n",
    "# ==== 2. 归一化 (RevIN 思想：仅输入特征归一化) ====\n",
    "# 输入特征：除去 date 和 streamflow\n",
    "features = [c for c in df.columns if c not in [\"date\", \"streamflow\"]]\n",
    "target = \"streamflow\"\n",
    "\n",
    "# scaler_x = StandardScaler()\n",
    "# scaler_y = StandardScaler()\n",
    "\n",
    "# df[features] = scaler_x.fit_transform(df[features])\n",
    "# df[target] = scaler_y.fit_transform(df[[target]])\n",
    "\n",
    "# # 保存 scaler 参数方便逆变换\n",
    "# os.makedirs(\"data/scalers\", exist_ok=True)\n",
    "# np.savez(\"data/scalers/revin_scalers.npz\",\n",
    "#          mean_x=scaler_x.mean_, scale_x=scaler_x.scale_,\n",
    "#          mean_y=scaler_y.mean_, scale_y=scaler_y.scale_)\n",
    "\n",
    "# ==== 3. 构造样本窗口 ====\n",
    "samples = []\n",
    "for i in tqdm(range(INPUT_LEN, len(df) - PRED_LEN)):\n",
    "    past = df.iloc[i - INPUT_LEN:i]\n",
    "    future = df.iloc[i:i + PRED_LEN]\n",
    "\n",
    "    input_text = \"Past 12 days meteorological and soil data:\\n\"\n",
    "    for _, row in past.iterrows():\n",
    "        day_str = row[\"date\"]\n",
    "        feats = [f\"{f}:{row[f]:.3f}\" for f in features]\n",
    "        input_text += f\"{day_str} | \" + \", \".join(feats) + \"\\n\"\n",
    "\n",
    "    input_text += f\"\\nPredict the streamflow for next {PRED_LEN} days (normalized):\"\n",
    "\n",
    "    output_text = \", \".join([f\"{v:.3f}\" for v in future[\"streamflow\"].values])\n",
    "\n",
    "    samples.append({\n",
    "        \"instruction\": \"Predict future streamflow based on past hydrometeorological data.\",\n",
    "        \"input\": input_text.strip(),\n",
    "        \"output\": output_text\n",
    "    })\n",
    "\n",
    "# ==== 4. 切分训练 / 验证 ====\n",
    "np.random.seed(42)\n",
    "np.random.shuffle(samples)\n",
    "split = int(len(samples) * 0.8)\n",
    "train_data, val_data = samples[:split], samples[split:]\n",
    "\n",
    "def save_jsonl(data, path):\n",
    "    with open(path, \"w\", encoding=\"utf-8\") as f:\n",
    "        for d in data:\n",
    "            f.write(json.dumps(d, ensure_ascii=False) + \"\\n\")\n",
    "\n",
    "save_jsonl(train_data, OUT_TRAIN)\n",
    "save_jsonl(val_data, OUT_VAL)\n",
    "\n",
    "print(f\"✅ 生成完毕：训练样本 {len(train_data)}，验证样本 {len(val_data)}\")\n"
   ]
  }
